<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Name_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>IF(Sales_Lead_Id__c != Null,OR(ISCHANGED(FirstName),ISCHANGED(LastName),ISCHANGED(Salutation)),False)</errorConditionFormula>
    <errorMessage>Name is not editable after the lead created to service CRM</errorMessage>
</ValidationRule>