<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pincode_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Pincode__c)), 
    NOT(REGEX(Pincode__c, &quot;^[0-9]{6}$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Pincode__c</errorDisplayField>
    <errorMessage>Pincode should be 6 digit number.</errorMessage>
</ValidationRule>
