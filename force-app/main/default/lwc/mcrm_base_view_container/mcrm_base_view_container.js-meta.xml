<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="dynTableAPI" label="Dynamic Table Name" type="String" description="Enter Dynamic Table(CMT) API Name"/>
            <property name="secName" label="Section Name" type="String" description="Enter Accordian Section Name" default="General"/>
            <property name="fireApiOnLoad" label="Fire API on Focus" type="Boolean" description="Invoke API as section is expanded." default="false"/>
            <property name="isShowDate" label="Show Dates" type="Boolean" description="Show From and To Dates" default="false"/>
            <property name="isCollapsed" label="Collapse Section" type="Boolean" default="true"/>
            <property name="showRefresh" label="Show Refresh" type="Boolean" default="true"/>
            <property name="showPreview" label="Show Preview" type="Boolean" default="true"/>
            <property name="passPayload" label="Pass Payload" type="Boolean" default="false" description="Use this to pass payload which can be used for other components."/>

            <supportedFormFactors>
                <supportedFormFactor type="Large" />
                <supportedFormFactor type="Small" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>