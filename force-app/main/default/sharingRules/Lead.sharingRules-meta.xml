    <sharingCriteriaRules>
        <fullName>ABHI_Prospect_Sharing</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Share Lead with Business Unit with ABHI value to ABHI Role Hierarchy</description>
        <label>ABHI Prospect Sharing</label>
        <sharedTo>
            <roleAndSubordinates>ABHI_Service_Manager</roleAndSubordinates>
        </sharedTo>
        <criteriaItems>
            <field>Business_Unit__c</field>
            <operation>equals</operation>
            <value>ABHI</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
