    <sharingCriteriaRules>
        <fullName>ABFL_Prospect_Sharing</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Share Lead with Business Unit with ABFL value to ABFL Role Hierarchy</description>
        <label>ABFL Prospect Sharing</label>
        <sharedTo>
            <roleAndSubordinates>ABFL_Executive_Leadership</roleAndSubordinates>
        </sharedTo>
        <criteriaItems>
            <field>Business_Unit__c</field>
            <operation>equals</operation>
            <value>ABFL</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
